<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns="http://java.sun.com/xml/ns/javaee" xsi:schemaLocation="http://java.sun.com/xml/ns/javaee http://java.sun.com/xml/ns/javaee/web-app_3_0.xsd" id="WebApp_ID" version="3.0">
  <display-name>BusTicketManagement</display-name>
  <welcome-file-list>
    <welcome-file>Index.html</welcome-file>
  </welcome-file-list>
  
   <context-param>
    <param-name>log4j-config-location</param-name>
    <param-value>WEB-INF/log4j.properties</param-value>
  </context-param>
  
  <listener>
  	<listener-class>com.realcoderz.passenger.controller.ContextListener</listener-class>
  </listener>
  
  <servlet>
    <servlet-name>Login</servlet-name>
    <servlet-class>com.realcoderz.passenger.controller.Login</servlet-class>
  </servlet>
  <servlet-mapping>
    <servlet-name>Login</servlet-name>
    <url-pattern>/login</url-pattern>
  </servlet-mapping>
  <servlet>
    <servlet-name>PassengerServlet</servlet-name>
    <servlet-class>com.realcoderz.passenger.controller.PassengerServlet</servlet-class>
  </servlet>
  <servlet-mapping>
    <servlet-name>PassengerServlet</servlet-name>
    <url-pattern>/register</url-pattern>
  </servlet-mapping>
  <servlet>
    <servlet-name>PassengerLogin</servlet-name>
    <servlet-class>com.realcoderz.passenger.controller.PassengerLogin</servlet-class>
  </servlet>
  <servlet-mapping>
    <servlet-name>PassengerLogin</servlet-name>
    <url-pattern>/passengerlogin</url-pattern>
  </servlet-mapping>
  <servlet>
    <servlet-name>BusServlet</servlet-name>
    <servlet-class>com.realcoderz.passenger.controller.BusServlet</servlet-class>
  </servlet>
  <servlet-mapping>
    <servlet-name>BusServlet</servlet-name>
    <url-pattern>/addbus</url-pattern>
  </servlet-mapping>
  <servlet>
    <servlet-name>BusUpdate</servlet-name>
    <servlet-class>com.realcoderz.passenger.controller.BusUpdate</servlet-class>
  </servlet>
  <servlet-mapping>
    <servlet-name>BusUpdate</servlet-name>
    <url-pattern>/updatebus</url-pattern>
  </servlet-mapping>
  <servlet>
    <servlet-name>BusDelete</servlet-name>
    <servlet-class>com.realcoderz.passenger.controller.BusDelete</servlet-class>
  </servlet>
  <servlet-mapping>
    <servlet-name>BusDelete</servlet-name>
    <url-pattern>/deletebus</url-pattern>
  </servlet-mapping>
  <servlet>
    <servlet-name>PassengerDeleteAdmin</servlet-name>
    <servlet-class>com.realcoderz.passenger.controller.PassengerDeleteAdmin</servlet-class>
  </servlet>
  <servlet-mapping>
    <servlet-name>PassengerDeleteAdmin</servlet-name>
    <url-pattern>/deletepassenger</url-pattern>
  </servlet-mapping>
  <servlet>
    <servlet-name>PassengerUpdate</servlet-name>
    <servlet-class>com.realcoderz.passenger.controller.PassengerUpdate</servlet-class>
  </servlet>
  <servlet-mapping>
    <servlet-name>PassengerUpdate</servlet-name>
    <url-pattern>/updatepassenger</url-pattern>
  </servlet-mapping>
  <servlet>
    <servlet-name>BookTicket</servlet-name>
    <servlet-class>com.realcoderz.passenger.controller.BookTicket</servlet-class>
  </servlet>
  <servlet-mapping>
    <servlet-name>BookTicket</servlet-name>
    <url-pattern>/busticketbook</url-pattern>
  </servlet-mapping>
</web-app>